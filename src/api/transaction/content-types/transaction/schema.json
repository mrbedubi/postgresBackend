{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "transaction",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "transferType": {
      "type": "enumeration",
      "enum": [
        "credito",
        "debito"
      ],
      "required": true
    },
    "amount": {
      "type": "decimal",
      "min": 0.1,
      "required": true
    },
    "transferToIban": {
      "type": "string",
      "required": false,
      "maxLength": 50
    },
    "transactionDate": {
      "type": "datetime",
      "required": true
    },
    "attachements": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "transactions"
    },
    "approval": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::approval.approval",
      "mappedBy": "transaction"
    },
    "transaction_history": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::transaction-history.transaction-history",
      "mappedBy": "transaction"
    },
    "transferStatus": {
      "type": "enumeration",
      "enum": [
        "Pendente",
        "Recusada",
        "Aprovada"
      ]
    },
    "credits": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::credit.credit",
      "mappedBy": "transaction"
    },
    "complete": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
